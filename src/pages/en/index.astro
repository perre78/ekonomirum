---
import SiteLayout from "../../layouts/SiteLayout.astro";

const base = import.meta.env.BASE_URL;
---

<SiteLayout lang="en" title="Rental apartments for workers">
  <section class="hero">
    <h1>Furnished apartments for workers in Sweden</h1>
    <p>
      We offer practical, furnished accommodation for workers and companies temporarily working in Sweden.
      The focus is on comfort, simplicity, and a reliable place to stay during your assignment.
    </p>
  </section>

  <section class="section">
    <h2>The accommodation</h2>
    <p>
      Our places are designed for everyday living and suit both individuals and work teams.
    </p>
    <ul>
      <li>Bed and storage</li>
      <li>Kitchen with basic equipment</li>
      <li>Bathroom with shower</li>
      <li>Internet</li>
      <li>Laundry facilities</li>
    </ul>

    <img src={`${base}img/boende.jpg`} alt="Example accommodation" loading="lazy" />
  </section>

  <section class="section">
    <h2>About us</h2>
    <p>
      We rent out accommodation to workers staying in Sweden for shorter or longer periods.
    </p>

    <img src={`${base}img/interior.jpg`} alt="Example interior" loading="lazy" />
  </section>

  <section class="section">
    <h2>Contact</h2>
    <p>
      Email: info@example.com<br />
      Phone: +46 XX XXX XX XX
    </p>
  </section>
</SiteLayout>
