---
const { 
  lang = "sv", 
  title = "Ekonomirum", 
  description = "Default description"
} = Astro.props;

const base = import.meta.env.BASE_URL;
const svUrl = `${base}sv/`;
const enUrl = `${base}en/`;
const plUrl = `${base}pl/`;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>

    <style is:global>
      :root{
      --text: rgba(255, 255, 255, .92);
      --muted: rgba(255, 255, 255, .72);
      --border: rgba(255, 255, 255, .14);
      --shadow: 0 12px 40px rgba(0, 0, 0, .35);
      --radius: 18px;
      --maxw: 880px; /* Maxbredd fÃ¶r innehÃ¥ll */
        /* ENDA stÃ¤llet som styr bildstorlek */
        --img-max: 320px;
      }

      main.wrap img{
      width: min(100%, var(--img-max));
      height: auto;
      display: block;
      margin: 1.5rem auto;
      border-radius: 12px;
      }

      *{ box-sizing:border-box; }

      body{
        margin:0;
        font-family: system-ui, -apple-system, Segoe UI, Roboto, Arial;
        color: var(--text);
        line-height: 1.55;
      }

      a{ color: inherit; }

      /* ===== HEADER ===== */
      .header{
        position: sticky;
        top: 0;
        z-index: 50;
        backdrop-filter: blur(10px);
        background: rgba(11,18,32,.65);
        border-bottom: 1px solid var(--border);
      }
      .header-inner{
        max-width: var(--maxw);
        margin: 0 auto;
        padding: 12px 16px;
        display:flex;
        align-items:center;
        justify-content: space-between;
        gap:12px;
      }
      .brand{
        display:flex;
        align-items:center;
        gap:10px;
        text-decoration:none;
      }
      .dot{
        width:10px;height:10px;border-radius:999px;
        background: rgba(255,255,255,.85);
      }

      .lang{ display:flex; gap:8px; }
      
      .pill{
        padding:8px 12px;
        border-radius:999px;
        border:1px solid var(--border);
        background: rgba(255,255,255,.06);
        text-decoration:none;
        font-size:.95rem;
      }
      
      .pill[aria-current="page"]{
        background: rgba(255,255,255,.25);
        pointer-events:none;
      }

      /* ===== CONTENT ===== */
      .wrap{
        max-width: var(--maxw);
        margin: 32px auto;
        padding: 28px 22px;
        background: rgba(255,255,255,.92);
        color:#0f172a;
        border-radius: 22px;
        box-shadow: var(--shadow);
      }

      h1,h2{ color:#020617; }
      p,li{ color:#334155; }

      .section{
        margin-top:18px;
        padding:18px;
        border:1px solid var(--border);
        border-radius: var(--radius);
        background: rgba(218, 213, 213, 0.6); /*fÃ¤rg pÃ¥ mitten-sektionerna*/
      }

      /* ===== BILDRAD (tvÃ¥ bilder bredvid varandra) ===== */
      .image-row{
        display:flex;
        gap: 1rem;
        margin-top: 1rem;
        align-items: stretch;
      }

      .image-row img{
        width: 100%;
        max-width: 50%;
        height: auto;
        margin: 0;              /* tar bort auto-centering frÃ¥n globala img */
      }

      /* Mobil: stapla */
      @media (max-width: 640px){
        .image-row{
          flex-direction: column;
        }
        .image-row img{
          max-width: 100%;
        }
      }

      main.wrap img:not(.no-global):not(.image-row img){
        display:block;
        width: var(--img-max);
        max-width: 100%;
        height:auto;
        margin: 1.5rem auto;
        border-radius:12px;
        box-shadow: 0 10px 30px rgba(0,0,0,.25);
      }


      footer{
        max-width: var(--maxw);
        margin: 24px auto;
        padding: 0 16px 22px;
        color: rgba(255,255,255,.6);
        font-size:.95rem;
      }

    </style>
  </head>

  <body
    style={`
      background:
        linear-gradient(rgba(11,18,32,.78), rgba(11,18,32,.78)),
        url('${base}img/Areal_photo_of_Karlstad.jpg');
      background-size: cover;
      background-position: center;
      background-attachment: fixed;
    `}
  >

    <header class="header">
      <div class="header-inner">
        <a class="brand" href={lang === "sv" ? svUrl : lang === "pl" ? plUrl : enUrl}>
          <span class="dot"></span>
          <strong>Ekonomirum</strong>
        </a>

      <nav class="lang">
        <a class="pill" href={svUrl} aria-current={lang==="sv"?"page":undefined}>ðŸ‡¸ðŸ‡ª SV</a>
        <a class="pill" href={enUrl} aria-current={lang==="en"?"page":undefined}>ðŸ‡¬ðŸ‡§ EN</a>
        <a class="pill" href={plUrl} aria-current={lang==="pl"?"page":undefined}>ðŸ‡µðŸ‡± PL</a>
      </nav>

      </div>
    </header>

    <main class="wrap">
      <slot />
    </main>

    <footer>Â© 2025 â€“ Ekonomirum</footer>
  </body>
</html>
