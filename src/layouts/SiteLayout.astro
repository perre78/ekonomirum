---
const { lang = "sv", title = "Karlstad" } = Astro.props;

const base = import.meta.env.BASE_URL; // "/" lokalt, "/apartemets-site/" i prod
const svUrl = `${base}sv/`;
const enUrl = `${base}en/`;
const plUrl = `${base}pl/`;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>

    <style>
      :root {
        --bg: #0b1220;
        --card: rgba(255, 255, 255, 0.06);
        --card2: rgba(255, 255, 255, 0.08);
        --text: rgba(255, 255, 255, 0.92);
        --muted: rgba(255, 255, 255, 0.72);
        --border: rgba(255, 255, 255, 0.14);
        --shadow: 0 12px 40px rgba(0, 0, 0, 0.35);
        --radius: 18px;
        --maxw: 980px;
      }

      * {
        box-sizing: border-box;
      }

      body{
        margin: 0;
        font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Arial;
        color: var(--text);
        line-height: 1.55;
      }


      a {
        color: inherit;
      }

      /* Sticky header */
      .header {
        position: sticky;
        top: 0;
        z-index: 50;
        backdrop-filter: blur(10px);
        background: rgba(11, 18, 32, 0.65);
        border-bottom: 1px solid var(--border);
      }

      .header-inner {
        max-width: var(--maxw);
        margin: 0 auto;
        padding: 12px 16px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 12px;
      }

      .brand {
        display: flex;
        align-items: center;
        gap: 10px;
        text-decoration: none;
      }

      .dot {
        width: 10px;
        height: 10px;
        border-radius: 999px;
        background: rgba(255, 255, 255, 0.85);
        box-shadow: 0 0 0 4px rgba(255, 255, 255, 0.08);
      }

      .brand-title {
        font-weight: 650;
        letter-spacing: 0.2px;
      }

      /* SprÃ¥kknappar */
      .lang {
        display: flex;
        gap: 8px;
        align-items: center;
      }

      .pill {
        text-decoration: none;
        padding: 8px 12px;
        border-radius: 999px;
        border: 1px solid var(--border);
        background: rgba(255, 255, 255, 0.04);
        font-size: 0.95rem;
        transition: background 0.2s ease, border-color 0.2s ease, transform 0.15s ease;
      }

      .pill[aria-current="page"] {
        background: rgba(255, 255, 255, 0.22);
        border-color: rgba(255, 255, 255, 0.45);
        font-weight: 600;
        pointer-events: none;
      }

      .pill:not([aria-current="page"]):hover {
        background: rgba(255, 255, 255, 0.1);
        transform: translateY(-1px);
      }

      /* Page layout */
      .wrap {
        max-width: var(--maxw);
        margin: 32px auto 54px;
        padding: 28px 22px;

        background: rgba(255, 255, 255, 0.92);
        color: #0f172a;

        border-radius: 22px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.35);
      }

      .wrap h1,
      .wrap h2,
      .wrap h3 {
        color: #020617;
      }

      .wrap p,
      .wrap li {
        color: #334155;
      }

      .hero {
        background: linear-gradient(180deg, rgba(255, 255, 255, 0.08), rgba(255, 255, 255, 0.04));
        border: 1px solid var(--border);
        border-radius: calc(var(--radius) + 6px);
        box-shadow: var(--shadow);
        padding: 26px 22px;
      }

      /* Headings/text inside content */
      h1 {
        margin: 0 0 10px;
        font-size: clamp(28px, 3.2vw, 40px);
        line-height: 1.15;
      }

      /* Viktigt: p ska inte Ã¤rva "muted" Ã¶verallt nÃ¤r vi har vit wrap */
      p {
        margin: 10px 0;
        font-size: 1.05rem;
      }

      .section {
        margin-top: 18px;
        background: var(--card);
        border: 1px solid var(--border);
        border-radius: var(--radius);
        padding: 18px;
      }

      h2 {
        margin: 0 0 10px;
        font-size: 1.25rem;
      }

      ul {
        margin: 10px 0 0 18px;
        color: var(--muted);
      }

      /* Bas fÃ¶r alla bilder */
      img {
        max-width: 100%;
        height: auto;
        display: block;
      }

      /* Bilder i innehÃ¥llssektioner (rimlig storlek) */
      .section img {
        width: min(100%, 720px);
        margin: 1.5rem auto 0;
        border-radius: 12px;
        border: 1px solid var(--border);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.25);
      }

      footer {
        max-width: var(--maxw);
        margin: 26px auto 0;
        padding: 0 16px 22px;
        color: rgba(255, 255, 255, 0.55);
        font-size: 0.95rem;
      }

      /* Mobile-first fÃ¶rbÃ¤ttringar */
      @media (max-width: 520px) {
        .header-inner {
          padding: 10px 12px;
          gap: 8px;
        }

        .lang {
          gap: 6px;
        }

        .wrap {
          margin: 16px 10px 24px;
          padding: 16px 14px;
          border-radius: 16px;
        }

        .pill {
          padding: 8px 10px;
        }

        .pill .label {
          display: none;
        }
      }

      /* Undvik hackig scroll pÃ¥ mobiler */
      @media (hover: none) and (pointer: coarse) {
        body {
          background-attachment: scroll;
        }
      }

      /* Lite mindre bilder pÃ¥ stÃ¶rre skÃ¤rm */
      @media (min-width: 1024px) {
        .section img {
          width: 640px;
          max-width: 100%;
        }
      }
    </style>
  </head>

    <body
      style={`
        background:
          linear-gradient(rgba(11,18,32,0.78), rgba(11,18,32,0.78)),
          url('${base}img/Areal_photo_of_Karlstad.jpg');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
      `}
    >

    <header class="header">
      <div class="header-inner">
        <a class="brand" href={lang === "sv" ? svUrl : lang === "pl" ? plUrl : enUrl}>
          <span class="dot" aria-hidden="true"></span>
          <span class="brand-title">Karlstad</span>
        </a>

        <nav class="lang" aria-label="SprÃ¥k">
          <a class="pill" href={svUrl} aria-current={lang === "sv" ? "page" : undefined} aria-label="Svenska">
            <span class="flag" aria-hidden="true">ðŸ‡¸ðŸ‡ª</span>
            <span class="label">SV</span>
          </a>

          <a class="pill" href={enUrl} aria-current={lang === "en" ? "page" : undefined} aria-label="English">
            <span class="flag" aria-hidden="true">ðŸ‡¬ðŸ‡§</span>
            <span class="label">EN</span>
          </a>

          <a class="pill" href={plUrl} aria-current={lang === "pl" ? "page" : undefined} aria-label="Polski">
            <span class="flag" aria-hidden="true">ðŸ‡µðŸ‡±</span>
            <span class="label">PL</span>
          </a>
        </nav>
      </div>
    </header>

    <main class="wrap">
      <slot />
    </main>

    <footer>Â© 2025 â€“ Uthyrning av boende fÃ¶r arbetare</footer>
  </body>
</html>
