---
const { lang, title, switchHref, switchLabel } = Astro.props;
---

<!DOCTYPE html>
<html lang={lang}>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title}</title>

  <style>
    body {
      font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
      line-height: 1.6;
      margin: 0;
      color: #222;
      background-color: #fff;
    }

    .page {
      max-width: 900px;
      margin: 0 auto;
      padding: 2rem 1rem;
    }

    header {
      border-bottom: 1px solid #e0e0e0;
      margin-bottom: 2rem;
    }

    .lang-switch {
      text-align: right;
      font-size: 0.9rem;
      margin-bottom: 1rem;
    }

    section {
      margin-bottom: 2.5rem;
    }

    .image-placeholder {
      background-color: #f2f2f2;
      color: #666;
      text-align: center;
      padding: 4rem 1rem;
      margin: 2rem 0;
      border: 2px dashed #bbb;
      font-size: 0.9rem;
    }

    footer {
      border-top: 1px solid #e0e0e0;
      font-size: 0.9rem;
      color: #555;
      margin-top: 3rem;
      padding-top: 1.5rem;
    }
  </style>
</head>

<body>

  <div class="page">

    <header>
      <div class="lang-switch">
        <a href={switchHref}>{switchLabel}</a>
      </div>

      <slot name="header" />
    </header>

    <main>
      <slot />
    </main>

    <footer>
      <p>© 2025 – Uthyrning av boende för arbetare</p>
    </footer>

  </div>

</body>
</html>
